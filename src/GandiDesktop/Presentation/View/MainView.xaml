<Window x:Class="GandiDesktop.Presentation.View.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:GandiDesktop.Presentation.View"
    xmlns:vm="clr-namespace:GandiDesktop.Presentation.ViewModel"
    SnapsToDevicePixels="True" Height="480" Width="640"
    Title="Gandi Desktop">
    
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFD6CBBA" Opacity="0.5" />
        </Grid.Background>
        
        <Image Source="/GandiDesktop;component/Resources/Logo.png" Height="78" Width="51.5" Opacity="0.05" />
        <v:DesktopView DataContext="{Binding DesktopViewModel}" />
    </Grid>
    
</Window>
